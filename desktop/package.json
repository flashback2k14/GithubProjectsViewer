{
  "name": "github-projects-viewer-desktop",
  "description": "View Github Projects built with Vue.js 2 - Desktop",
  "version": "1.6.0",
  "main": "index.js",
  "license": "MIT",
  "author": "flashback2k14",
  "repository": {
    "type": "github",
    "url": "https://github.com/flashback2k14/GithubProjectsViewer"
  },
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf release/",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.png.icns --prune=true --out=release",
    "create-mac-installer": "electron-installer-dmg --overwrite --icon=assets/icons/mac/icon.png.icns --out=release ./release/github-projects-viewer-desktop-darwin-x64/github-projects-viewer-desktop.app/ install-ghp-desktop",
    "build-mac": "npm run clean && npm run package-mac && npm run create-mac-installer",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.png.ico --prune=true --out=release --asar=true --version-string.ProductName=GithubProjectsViewer",
    "create-win-installer": "node installer/createWinInstaller.js",
    "build-win": "npm run package-win && npm run create-win-installer",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/512x512.png --prune=true --out=release"
  },
  "devDependencies": {
    "electron": "~1.7.5",
    "electron-installer-dmg": "~0.2.1",
    "electron-packager": "~8.7.2",
    "electron-winstaller": "~2.6.3"
  }
}
