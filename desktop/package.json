{
  "name": "github-projects-viewer-desktop",
  "description": "View Github Projects built with Vue.js 2 - Desktop",
  "version": "1.6.0",
  "main": "index.js",
  "license": "MIT",
  "author": "flashback2k14",
  "repository": {
    "type": "github",
    "url": "https://github.com/flashback2k14/GithubProjectsViewer"
  },
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf node_modules/ release/",
    "debian-clean": "rm -rf release/debian",
    "debian-package": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/512x512.png --prune=true --out=release/debian",
    "debian-create-installer": "electron-installer-debian --src=release/debian/ --dest=release/debian/ --arch=amd64",
    "debian-build": "npm run debian-clean && npm run debian-package && npm run debian-create-installer",
    "mac-clean": "rm -rf release/mac/",
    "mac-package": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.png.icns --prune=true --out=release/mac",
    "mac-create-installer": "electron-installer-dmg --overwrite --icon=assets/icons/mac/icon.png.icns --out=release/mac ./release/mac/github-projects-viewer-desktop-darwin-x64/github-projects-viewer-desktop.app/ install-ghp-desktop",
    "mac-build": "npm run mac-clean && npm run mac-package && npm run mac-create-installer",
    "win-clean": "rm -rf release/win/",
    "win-package": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.png.ico --prune=true --out=release/win --asar=true --version-string.ProductName=GithubProjectsViewer",
    "win-create-installer": "node installer/createWinInstaller.js",
    "win-build": "npm run win-clean && npm run win-package && npm run win-create-installer"
  },
  "devDependencies": {
    "electron": "~1.7.5",
    "electron-installer-dmg": "~0.2.1",
    "electron-installer-debian": "~0.5.2",
    "electron-packager": "~8.7.2",
    "electron-winstaller": "~2.6.3"
  }
}
