{
  "name": "github-projects-viewer-desktop",
  "description": "View Github Projects built with Vue.js 2 - Desktop",
  "version": "1.6.2",
  "main": "index.js",
  "license": "MIT",
  "author": "flashback2k14",
  "repository": {
    "type": "github",
    "url": "https://github.com/flashback2k14/GithubProjectsViewer"
  },
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf node_modules/ ../desktop-release/release",
    "package:before:clean": "rm -rf ../desktop-release/release",
    "package:osx": "electron-packager ./src GithubProjectsViewer --platform darwin --arch x64 --prune --overwrite --out ../desktop-release/release --overwrite --icon assets/icons/mac/icon.png.icns",
    "package:linux": "electron-packager ./src GithubProjectsViewer --platform linux --arch x64 --prune --overwrite --out ../desktop-release/release --overwrite --icon assets/icons/png/512x512.png",
    "package:win32": "electron-packager ./src GithubProjectsViewer --platform win32 --arch x64 --prune --overwrite --out ../desktop-release/release --overwrite --icon assets/icons/win/icon.png.ico",
    "package:after:zip": "zip -r -X ../desktop-release/GithubProjectsViewer-darwin-x64.zip ../desktop-release/release/GithubProjectsViewer-darwin-x64 && zip -r -X ../desktop-release/GithubProjectsViewer-linux-x64.zip ../desktop-release/release/GithubProjectsViewer-linux-x64 && zip -r -X ../desktop-release/GithubProjectsViewer-win32-x64.zip ../desktop-release/release/GithubProjectsViewer-win32-x64",
    "package:all": "npm run package:before:clean && npm run package:osx && npm run package:linux && npm run package:win32"
  },
  "devDependencies": {
    "electron": "~1.7.6",
    "electron-packager": "~8.7.2"
  }
}
