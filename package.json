{
  "name": "github-projects-viewer",
  "description": "View Github Projects built with Vue.js 2",
  "version": "1.0.0",
  "license": "MIT",
  "author": "flashback2k14",
  "repository": {
    "type": "github",
    "url": "https://github.com/flashback2k14/GithubProjectsViewer"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --inline --hot",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "clean": "rm -r build/ prod/",
    "clean:a": "rm -r build/ node_modules",
    "prod": "npm run build && mkdir prod && cp -rv build prod/build && cp index.html prod && cp style.css prod",
    "deploy": "npm run clean && npm run build && cd prod && surge --domain github-project-viewer.surge.sh"
  },
  "dependencies": {
    "vue": "~2.1.8"
  },
  "devDependencies": {
    "babel-core": "~6.21.0",
    "babel-loader": "~6.2.10",
    "babel-preset-es2015": "~6.18.0",
    "cross-env": "~3.1.4",
    "css-loader": "~0.26.1",
    "file-loader": "~0.9.0",
    "moment": "~2.17.1",
    "showdown": "~1.5.5",
    "surge": "~0.18.0",
    "vue-loader": "~10.0.2",
    "vue-template-compiler": "~2.1.8",
    "webpack": "~2.1.0-beta.28",
    "webpack-dev-server": "~2.1.0-beta.12"
  }
}
